@model iRentCar.VehicleActor.Interfaces.VehicleInfo

@{
    ViewData["Title"] = "Details";
}

<h2>Vehicle Details</h2>

<div class="container">
    <dl class="dl-horizontal">
        <dt>
            Plate
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Plate)
        </dd>
        <dt>
            Brand
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt>
            Model
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt>
            Daily cost (€)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DailyCost)
        </dd>
        <dt>
            Stato
        </dt>
        <dd>
            @switch (Model.State)
            {
                case iRentCar.VehicleActor.Interfaces.VehicleState.Busy:
                    @: Rented
                    break;
                case iRentCar.VehicleActor.Interfaces.VehicleState.Free:
                    @: Available
                    break;
                case iRentCar.VehicleActor.Interfaces.VehicleState.NotAvailable:
                    @: Not Available
                    break;
            }
        </dd>
    </dl>
    <br/>
    @{
        var rentHidden = Model.CurrentRent == null ? "hidden" : "";
    }
    <div class="panel panel-default @rentHidden">
        <div class="panel-heading">Rent data</div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>
                    Customer
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CurrentRent.User)
                </dd>
                <dt>
                    Start from
                </dt>
                <dd>
                    @Model.CurrentRent?.StartDate.ToString("dd/MM/yyyy hh:mm")
                </dd>
                <dt>
                    to
                </dt>
                <dd>
                    @Model.CurrentRent?.EndDate.ToString("dd/MM/yyyy hh:mm")
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
